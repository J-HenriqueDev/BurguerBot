{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "exclude": [
    "./build.ts"
  ]
}